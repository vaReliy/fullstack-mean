{
  "name": "fullstack-mean",
  "version": "1.0.0",
  "description": "MEAN fullstack education project",
  "engines": {
    "node": "12.16.3",
    "npm": "6.14.5"
  },
  "main": "src/index.js",
  "scripts": {
    "install:all": "npm run install:server && npm run install:client",
    "install:client": "npm install --prefix client",
    "install:server": "npm install",
    "start:client": "npm run start --prefix client",
    "start:server": "nodemon index",
    "start": "run-p start:server start:client",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=true npm run install:client && npm run build --prefix client"
  },
  "keywords": [
    "angular",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:vaReliy/fullstack-mean.git"
  },
  "author": "Valeriy Garbuzov",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.9.10",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.7.14",
    "@types/multer": "^1.4.3",
    "@types/passport": "^1.0.3",
    "@types/passport-jwt": "^3.0.3",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5"
  }
}
